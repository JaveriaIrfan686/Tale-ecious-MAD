<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/talelistbackground"
    android:orientation="vertical"
    android:textAlignment="center">


    <TextView
        android:id="@+id/txt_contactUs"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="For any query, complaint, You may contact us on my email:"
        android:textColor="@android:color/system_accent1_300"
        android:textColorHighlight="@color/teal_200"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="javeria.bscsf19@iba-suk.edu.pk"
        android:textColor="@android:color/system_accent1_500"
        android:textSize="30dp"
        android:textStyle="bold|italic" />


</LinearLayout>